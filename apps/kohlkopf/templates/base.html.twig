{#
  App-spezifisches Base-Template für kohlkopf.
  Alle Seiten die das Framework-Layout nutzen, sollten von diesem Template erben.
  Definiert die app-weite Navigation mit Profil-Link.
#}
{% extends '@MyFrameworkCore/base_home.html.twig' %}

{% block footer_links %}
    &nbsp;·&nbsp; <a href="{{ path('app_legal_privacy') }}" class="text-muted">Datenschutz</a>
{% endblock %}

{% block navigation %}
    <li class="nav-item">
        <a class="nav-link{% if app.request.attributes.get('_route') == 'app_profile' %} active{% endif %}" href="{{ path('app_profile') }}">
            <i class="bi bi-person"></i> Profil
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link{% if app.request.attributes.get('_route') starts with 'concert' %} active{% endif %}" href="{{ path('concert_index') }}">
            <i class="bi bi-house"></i> Konzerte
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ path('myframework_auth_logout') }}">
            <i class="bi bi-box-arrow-right"></i> Abmelden
        </a>
    </li>
{% endblock %}

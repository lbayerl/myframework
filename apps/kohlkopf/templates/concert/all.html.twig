{% extends 'base.html.twig' %}

{% block title %}Alle Konzerte{% endblock %}

{% block page_title %}Konzerte{% endblock %}

{% block content %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Konzerte</h2>
            <a href="{{ path('concert_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Neues Konzert
            </a>
        </div>

        {% include 'concert/_tabs.html.twig' with { activeView: activeView } %}

        <div class="alert alert-light border mb-3">
            <i class="bi bi-info-circle me-2"></i>
            Alle Konzerte inkl. abgesagte und Entw√ºrfe.
        </div>

        {% if concertData is not empty %}
            <div class="list-group">
                {% for item in concertData %}
                    {% include 'concert/_concert_item.html.twig' with { 
                        concert: item.concert,
                        attendingCount: item.attendingCount,
                        interestedCount: item.interestedCount,
                        showStatus: true
                    } only %}
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="bi bi-calendar-x me-2"></i>
                Keine Konzerte gefunden.
                <a href="{{ path('concert_new') }}" class="alert-link">Leg jetzt ein neues Konzert an!</a>
            </div>
        {% endif %}
    </div>
{% endblock %}

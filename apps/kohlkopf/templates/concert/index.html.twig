{% extends '@MyFrameworkCore/base_home.html.twig' %}

{% block title %}Alle Konzerte{% endblock %}

{% block page_title %}Alle Konzerte{% endblock %}

{% block content %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Kommende Konzerte</h2>
            <a href="{{ path('concert_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Neues Konzert
            </a>
        </div>

        {% if concerts is not empty %}
            <div class="list-group">
                {% for concert in concerts %}
                    <a href="{{ path('concert_show', {'id': concert.id}) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">{{ concert.title }}</div>
                            <div class="text-muted small">{{ concert.whereText }}</div>
                            {% if concert.comment %}
                                <div class="small mt-1">{{ concert.comment|u.truncate(100, 'â€¦') }}</div>
                            {% endif %}
                        </div>
                        <div class="text-end">
                            <div class="fw-semibold">{{ concert.whenAt|date('d.m.Y') }}</div>
                            <div class="text-muted small">{{ concert.whenAt|date('H:i') }} Uhr</div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                Keine kommenden Konzerte gefunden.
                <a href="{{ path('concert_new') }}" class="alert-link">Leg jetzt ein neues Konzert an!</a>
            </div>
        {% endif %}
    </div>
{% endblock %}

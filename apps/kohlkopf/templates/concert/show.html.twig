{% extends 'base.html.twig' %}

{% block title %}{{ concert.title }}{% endblock %}

{% block page_title %}{{ concert.title }}{% endblock %}

{% block content %}
<div class="container py-3">
    {# Header Card - Concert Info #}
    <div class="card mb-3 shadow-sm">
        <div class="card-body">
            {# Status Badge #}
            {% if concert.status.value == 'CANCELLED' %}
                <div class="alert alert-danger py-2 mb-3">
                    <i class="bi bi-x-circle-fill me-2"></i>Dieses Konzert wurde abgesagt
                </div>
            {% endif %}

            {# Concert Details #}
            <div class="d-flex align-items-start">
                {# Artist Image #}
                {% if concert.artistImage %}
                    <div class="flex-shrink-0 me-3">
                        <img src="{{ concert.artistImage }}"
                             alt="{{ concert.title }}"
                             class="rounded shadow-sm"
                             style="width: 64px; height: 64px; object-fit: cover;">
                    </div>
                {% endif %}

                <div class="flex-grow-1 min-width-0">
                    <div class="d-flex align-items-start justify-content-between gap-2">
                        <div>
                            <h5 class="mb-1">ðŸŽ¸ {{ concert.title }}</h5>
                            {% if concert.genres %}
                                <div class="mb-1">
                                    {% for genre in concert.genres %}
                                        <span class="badge bg-secondary bg-opacity-25 text-dark me-1" style="font-size: 0.7em;">{{ genre }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                        {% if canEdit %}
                            <div class="d-flex gap-1 flex-shrink-0">
                                <a href="{{ path('concert_edit', {id: concert.id}) }}" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <form method="post" action="{{ path('concert_delete', {id: concert.id}) }}"
                                          onsubmit="return confirm('Konzert und alle zugehÃ¶rigen Tickets wirklich lÃ¶schen?');"
                                          style="display: inline;">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                    <div class="text-muted small">
                        <div><i class="bi bi-calendar-event me-1"></i><strong>{{ concert.whenAt|date('d.m.Y') }}</strong>, {{ concert.whenAt|date('H:i') }} Uhr</div>
                        {% if concert.whereText %}
                            <div><i class="bi bi-geo-alt me-1"></i>{{ concert.whereText }}</div>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# Comment #}
            {% if concert.comment %}
                <div class="mt-2 px-2 py-1 bg-light rounded small fst-italic text-muted">
                    <i class="bi bi-chat-quote me-1"></i>â€ž{{ concert.comment }}"
                </div>
            {% endif %}

            {# Artist Description from Wikipedia â€“ collapsed by default #}
            {% if concert.artistDescription %}
                <div class="mt-2">
                    <button class="btn btn-link btn-sm p-0 text-muted text-decoration-none"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#artist-description"
                            aria-expanded="false">
                        <i class="bi bi-info-circle me-1"></i><span class="small">Ãœber den KÃ¼nstler</span>
                        <i class="bi bi-chevron-down ms-1 small"></i>
                    </button>
                    <div class="collapse" id="artist-description">
                        <div class="mt-1 p-2 bg-light rounded small text-muted">
                            {{ concert.artistDescription }}
                            {% if concert.wikipediaUrl %}
                                <a href="{{ concert.wikipediaUrl }}" target="_blank" rel="noopener" class="ms-1 text-nowrap">Wikipedia <i class="bi bi-box-arrow-up-right"></i></a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}

            {# Action buttons: External Link + Calendar (compact, side by side) #}
            <div class="d-flex gap-2 mt-2">
                {% if concert.externalLink %}
                    <a href="{{ concert.externalLink }}" target="_blank" rel="noopener"
                       class="btn btn-outline-primary btn-sm flex-fill"
                       title="Tickets / Mehr Infos">
                        <i class="bi bi-box-arrow-up-right me-1"></i>Infos
                    </a>
                {% endif %}
                <a href="{{ path('concert_calendar', {id: concert.id}) }}"
                   class="btn btn-outline-secondary btn-sm {% if not concert.externalLink %}w-100{% else %}flex-fill{% endif %}"
                   title="Zum Kalender hinzufÃ¼gen">
                    <i class="bi bi-calendar-plus me-1"></i>Kalender
                </a>
            </div>
        </div>
    </div>

    {# Attendance Section #}
    {% set currentStatus = userStatus ? userStatus.value : null %}
    <div class="card mb-3 shadow-sm">
        <div class="card-body py-2">
            <div class="d-flex gap-2" id="attendance-buttons" data-concert-id="{{ concert.id }}">
                <button type="button"
                        class="btn flex-fill attendance-btn {{ currentStatus == 'ATTENDING' ? 'btn-success' : 'btn-outline-success' }}"
                        data-status="ATTENDING">
                    <i class="bi bi-check-circle me-1"></i>Dabei!

                </button>
                <button type="button"
                        class="btn flex-fill attendance-btn {{ currentStatus == 'INTERESTED' ? 'btn-primary' : 'btn-outline-primary' }}"
                        data-status="INTERESTED">
                    <i class="bi bi-star me-1"></i>Interessiert

                </button>
                <button type="button"
                        class="btn flex-fill attendance-btn {{ currentStatus == 'DECLINED' ? 'btn-secondary' : 'btn-outline-secondary' }}"
                        data-status="DECLINED">
                    <i class="bi bi-x-circle me-1"></i>Absagen

                </button>
            </div>
        </div>
    </div>

    {# Tab Navigation: Teilnehmer + Tickets #}
    <ul class="nav nav-tabs mb-0" id="concertTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="tab-attendees" data-bs-toggle="tab" data-bs-target="#panel-attendees"
                    type="button" role="tab">
                <i class="bi bi-people me-1"></i>Wer kommt?
                <span class="badge bg-success ms-1">{{ attendingCount }}</span>
                {% if interestedCount > 0 %}
                    <span class="badge bg-primary ms-1">{{ interestedCount }}</span>
                {% endif %}
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tab-tickets" data-bs-toggle="tab" data-bs-target="#panel-tickets"
                    type="button" role="tab">
                <i class="bi bi-ticket-perforated me-1"></i>Tickets
                {% if tickets|length > 0 %}
                    <span class="badge bg-secondary ms-1">{{ tickets|length }}</span>
                {% endif %}
            </button>
        </li>
    </ul>

    <div class="tab-content border border-top-0 rounded-bottom shadow-sm mb-3 bg-white">
        {# Attendees Tab #}
        <div class="tab-pane fade show active" id="panel-attendees" role="tabpanel">
            <turbo-frame id="attendee-list">
                {% include 'attendee/_list.html.twig' with {attendees: attendees} %}
            </turbo-frame>

            {# Add Guest â€“ hidden behind toggle #}
            <div class="px-3 pb-2 pt-1 border-top">
                <button class="btn btn-link btn-sm p-0 text-muted text-decoration-none"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#guest-add-panel"
                        aria-expanded="false">
                    <i class="bi bi-person-plus me-1"></i><span class="small">Gast hinzufÃ¼gen</span>
                    <i class="bi bi-chevron-down ms-1 small"></i>
                </button>
                <div class="collapse mt-2" id="guest-add-panel">
                    <div class="d-flex gap-2 align-items-end" id="guest-attendance-form" data-concert-id="{{ concert.id }}">
                        <div class="flex-grow-1">
                            <select class="form-select form-select-sm" id="guest-attendance-select">
                                <option value="">Gast wÃ¤hlenâ€¦</option>
                                {% for guest in guests %}
                                    <option value="{{ guest.id }}">{{ guest.name }}{% if guest.email %} ({{ guest.email }}){% endif %}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div>
                            <select class="form-select form-select-sm" id="guest-attendance-status">
                                <option value="ATTENDING">Kommt</option>
                                <option value="INTERESTED">Interessiert</option>
                                <option value="DECLINED">Kann nicht</option>
                            </select>
                        </div>
                        <button type="button" class="btn btn-sm btn-outline-primary" id="guest-attendance-add" disabled>
                            <i class="bi bi-plus-lg"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        {# Tickets Tab #}
        <div class="tab-pane fade" id="panel-tickets" role="tabpanel">
            <div class="d-flex justify-content-end px-3 pt-2">
                <a href="{{ path('ticket_new', {concertId: concert.id}) }}" class="btn btn-primary btn-sm">
                    <i class="bi bi-plus-lg me-1"></i>HinzufÃ¼gen
                </a>
            </div>
            <turbo-frame id="ticket-list">
                {% include 'ticket/_list.html.twig' with {tickets: tickets, unpaidTickets: unpaidTickets, concert: concert, currentUser: currentUser} %}
            </turbo-frame>
        </div>
    </div>

    {# Back button #}
    <div class="d-grid">
        <a href="{{ path('concert_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>ZurÃ¼ck zur Ãœbersicht
        </a>
    </div>
</div>

{# JavaScript for attendance status updates #}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const container = document.getElementById('attendance-buttons');
    if (!container) return;

    const concertId = container.dataset.concertId;
    const buttons = container.querySelectorAll('.attendance-btn');

    buttons.forEach(btn => {
        btn.addEventListener('click', async function() {
            const status = this.dataset.status;

            try {
                const response = await fetch(`/concert/${concertId}/attendee/status`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json',
                    },
                    body: JSON.stringify({ status: status })
                });

                const data = await response.json();

                if (data.success) {
                    // Update button states
                    buttons.forEach(b => {
                        const btnStatus = b.dataset.status;
                        const isActive = btnStatus === status;

                        // Remove existing check icon if present
                        const existingCheck = b.querySelector('.bi-check-circle-fill');
                        if (existingCheck) {
                            existingCheck.remove();
                        }

                        // Reset all buttons
                        b.classList.remove('btn-success', 'btn-primary', 'btn-secondary');
                        b.classList.remove('btn-outline-success', 'btn-outline-primary', 'btn-outline-secondary');

                        if (isActive) {
                            // Active button gets filled style
                            if (btnStatus === 'ATTENDING') b.classList.add('btn-success');
                            else if (btnStatus === 'INTERESTED') b.classList.add('btn-primary');
                            else b.classList.add('btn-secondary');

                            // Add check icon to active button
                            const checkIcon = document.createElement('i');
                            checkIcon.className = 'bi bi-check-circle-fill ms-1';
                            b.appendChild(checkIcon);
                        } else {
                            // Inactive buttons get outline style
                            if (btnStatus === 'ATTENDING') b.classList.add('btn-outline-success');
                            else if (btnStatus === 'INTERESTED') b.classList.add('btn-outline-primary');
                            else b.classList.add('btn-outline-secondary');
                        }
                    });

                    // Show toast
                    if (typeof showToast === 'function') {
                        showToast(data.message, 'success');
                    }

                    // Update attendee list with returned HTML
                    if (data.html) {
                        const frame = document.getElementById('attendee-list');
                        if (frame) {
                            frame.innerHTML = data.html;
                        }
                    }
                } else {
                    if (typeof showToast === 'function') {
                        showToast(data.error || 'Fehler', 'error');
                    }
                }
            } catch (error) {
                console.error('Error:', error);
                if (typeof showToast === 'function') {
                    showToast('Verbindungsfehler', 'error');
                }
            }
        });
    });
});

// Function to mark ticket as paid
async function markTicketPaid(concertId, ticketId, button) {
    try {
        const response = await fetch(`/concert/${concertId}/ticket/${ticketId}/pay`, {
            method: 'POST',
            headers: {
                'Accept': 'application/json',
            }
        });

        const data = await response.json();

        if (data.success) {
            // Update UI
            const ticketCard = button.closest('.ticket-card');
            if (ticketCard) {
                const badge = ticketCard.querySelector('.payment-badge');
                if (badge) {
                    badge.innerHTML = '<i class="bi bi-check-circle-fill text-success me-1"></i>Bezahlt';
                    badge.classList.remove('text-warning');
                    badge.classList.add('text-success');
                }
                button.remove();
            }

            if (typeof showToast === 'function') {
                showToast(data.message, 'success');
            }
        } else {
            if (typeof showToast === 'function') {
                showToast(data.error || 'Fehler', 'error');
            }
        }
    } catch (error) {
        console.error('Error:', error);
        if (typeof showToast === 'function') {
            showToast('Verbindungsfehler', 'error');
        }
    }
}

// Function to delete ticket
async function deleteTicket(concertId, ticketId, button) {
    if (!confirm('Ticket wirklich lÃ¶schen?')) return;

    try {
        const response = await fetch(`/concert/${concertId}/ticket/${ticketId}/delete`, {
            method: 'POST',
            headers: {
                'Accept': 'application/json',
            }
        });

        const data = await response.json();

        if (data.success) {
            // Remove ticket card from DOM
            const ticketCard = button.closest('.ticket-card');
            if (ticketCard) {
                ticketCard.remove();
            }

            if (typeof showToast === 'function') {
                showToast(data.message, 'success');
            }
        } else {
            if (typeof showToast === 'function') {
                showToast(data.error || 'Fehler', 'error');
            }
        }
    } catch (error) {
        console.error('Error:', error);
        if (typeof showToast === 'function') {
            showToast('Verbindungsfehler', 'error');
        }
    }
}

// === Guest Attendance ===
(function() {
    const guestSelect = document.getElementById('guest-attendance-select');
    const addBtn = document.getElementById('guest-attendance-add');
    const statusSelect = document.getElementById('guest-attendance-status');
    const form = document.getElementById('guest-attendance-form');

    if (!guestSelect || !form) return;

    const concertId = form.dataset.concertId;

    // Enable/disable add button based on selection
    guestSelect.addEventListener('change', function() {
        addBtn.disabled = !this.value;
    });

    // Add guest attendance
    addBtn.addEventListener('click', async function() {
        const guestId = guestSelect.value;
        const status = statusSelect.value;

        if (!guestId) return;

        try {
            const resp = await fetch(`/concert/${concertId}/attendee/guest-status`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ guest_id: parseInt(guestId), status: status })
            });

            const data = await resp.json();

            if (data.success) {
                const frame = document.getElementById('attendee-list');
                if (frame && data.html) {
                    frame.innerHTML = data.html;
                    bindGuestActions();
                }
                guestSelect.value = '';
                addBtn.disabled = true;

                if (typeof showToast === 'function') {
                    showToast(data.message, 'success');
                }
            } else {
                if (typeof showToast === 'function') {
                    showToast(data.error || 'Fehler', 'error');
                }
            }
        } catch (e) {
            console.error('Error:', e);
            if (typeof showToast === 'function') {
                showToast('Verbindungsfehler', 'error');
            }
        }
    });

    // Guest status change and remove handlers
    function bindGuestActions() {
        document.querySelectorAll('.guest-status-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                const guestId = this.dataset.guestId;
                const newStatus = this.dataset.status;

                try {
                    const resp = await fetch(`/concert/${concertId}/attendee/guest-status`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ guest_id: parseInt(guestId), status: newStatus })
                    });

                    const data = await resp.json();

                    if (data.success) {
                        const frame = document.getElementById('attendee-list');
                        if (frame && data.html) {
                            frame.innerHTML = data.html;
                            bindGuestActions();
                        }
                        if (typeof showToast === 'function') {
                            showToast(data.message, 'success');
                        }
                    } else {
                        if (typeof showToast === 'function') {
                            showToast(data.error || 'Fehler', 'error');
                        }
                    }
                } catch (e) {
                    console.error('Error:', e);
                    if (typeof showToast === 'function') {
                        showToast('Verbindungsfehler', 'error');
                    }
                }
            });
        });

        document.querySelectorAll('.guest-remove-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                const guestId = this.dataset.guestId;
                const guestName = this.dataset.guestName;

                if (!confirm(`${guestName} wirklich von der Teilnehmerliste entfernen?`)) return;

                try {
                    const resp = await fetch(`/concert/${concertId}/attendee/guest-remove`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ guest_id: parseInt(guestId) })
                    });

                    const data = await resp.json();

                    if (data.success) {
                        const frame = document.getElementById('attendee-list');
                        if (frame && data.html) {
                            frame.innerHTML = data.html;
                            bindGuestActions();
                        }
                        if (typeof showToast === 'function') {
                            showToast(data.message, 'success');
                        }
                    } else {
                        if (typeof showToast === 'function') {
                            showToast(data.error || 'Fehler', 'error');
                        }
                    }
                } catch (e) {
                    console.error('Error:', e);
                    if (typeof showToast === 'function') {
                        showToast('Verbindungsfehler', 'error');
                    }
                }
            });
        });
    }

    // Bind on initial load
    bindGuestActions();
})();
</script>

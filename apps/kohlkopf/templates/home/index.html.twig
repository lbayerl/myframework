{% extends '@MyFrameworkCore/base_home.html.twig' %}

{% block title %}Startseite - Kohlkopf{% endblock %}

{% block page_title %}Hallo {{ app.user.email }}!{% endblock %}

{% block page_subtitle %}Deine kommenden Konzerte{% endblock %}

{% block content %}
    <div class="container py-4">
        <div class="row mb-3">
            <div class="col-md-8 offset-md-2">
                <a href="{{ path('concert_new') }}" class="btn btn-primary btn-lg w-100">
                    <i class="bi bi-plus-lg"></i> Neues Konzert anlegen
                </a>
            </div>
        </div>

        {% if concerts is not empty %}
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="list-group">
                        {% for concert in concerts %}
                            <a href="{{ path('concert_show', {'id': concert.id}) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold">{{ concert.title }}</div>
                                    <div class="text-muted small">
                                        <i class="bi bi-geo-alt"></i> {{ concert.whereText }}
                                    </div>
                                    {% if concert.comment %}
                                        <div class="small mt-1">{{ concert.comment|u.truncate(100, 'â€¦') }}</div>
                                    {% endif %}
                                </div>
                                <div class="text-end">
                                    <div class="fw-semibold">{{ concert.whenAt|date('d.m.Y') }}</div>
                                    <div class="text-muted small">{{ concert.whenAt|date('H:i') }} Uhr</div>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Noch keine Konzerte</h5>
                            <p class="card-text">Leg dein erstes Konzert an und teile es mit deinen Freunden!</p>
                            <a href="{{ path('concert_new') }}" class="btn btn-primary">Jetzt Konzert anlegen</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
